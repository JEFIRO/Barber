<resources>

    <!-- Botão padrão da barbearia -->
    <style name="BarberButton">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Texto padrão -->
    <style name="BarberText">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Campo de texto -->
    <style name="BarberEditText">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

</resources>
